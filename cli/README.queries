select ls.id, ls.line_id, st.name from line_station as ls,  station as st where ls.line_id=1 and st.id=ls.station_id order by ls.id;

select ls.id, ls.line_id, st.name, ls.rank, ls.direction 
from line_station as ls, station as st 
where ls.line_id=1 
and ls.direction=63  
and st.id=ls.station_id 
order by ls.rank;

