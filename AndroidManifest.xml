<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.monnerville.transports.herault"
      android:versionCode="1"
      android:versionName="1.0">
      <application android:label="@string/app_name" android:icon="@drawable/flatbus" android:theme="@style/OfficialTheme">
        <activity android:name=".ui.AllLinesActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.default_searchable" android:value=".ui.SearchableActivity" />
        </activity>
        <activity android:name=".ui.BusLineActivity"
                  android:label="@string/busline_activity_title">
        </activity>
        <activity android:name=".ui.BusStationActivity"
                  android:label="@string/busline_activity_title">
        </activity>
        <activity android:name=".ui.SearchableActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity android:name=".ui.AppPreferenceActivity"
            android:label="@string/app_name">
        </activity>
    </application>
</manifest> 
